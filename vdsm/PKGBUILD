# Maintainer: Antoni Segura Puimedon <antonisp@celebdor.com>
pkgname=vdsm
pkgver=4.13
pkgrel=1
pkgdesc="oVirt's Virtual Desktop and Server Manager."
arch=('i686' 'x86_64')
url="http://www.ovirt.org/Vdsm"
license=('APACHE')
groups=()
depends=(
    'bridge-utils'
    'cdrkit'  # genisoimage
    'dosfstools'  # mkfs.vfat, mkfs.msdos
    'e2fsprogs'  # mkfs.ext2
    'ed'
    'fence-agents'  # Not packaged yet in Arch (https://git.fedorahosted.org/git/fence-agents.git)
    'gluster'
    'gnutls'  # certtool
    'inetutils'  # hostname
    'iproute2'
    'libguestfs'
    'libselinux'
    'libvirt>=1.0.2'
    'openssl'
    'psmisc'
    'pyparted'
    'python2-cpopen'
    'python2-dmidecode-git'
    'python2-ethtool'
    'python2-m2crypto'
    'python2-netaddr'
    'python2-pthreading'
    'python2-pyinotify'
    'python2-rtslib-fb'
    'sanlock'
    'sosreport'  # Not packaged yet in Arch https://github.com/sosreport/sosreport
    'tree'
)
makedepends=('python2-pyflakes' 'pep8-python2' 'python2-nose')
provides=()
conflicts=()
replaces=()
backup=()
options=(!emptydirs)
install=
source=("$pkgname::git+https://git.fedorahosted.org/git/python-ethtool.git#tag=v$pkgver")
md5sums=('SKIP')

build() {
  cd "$srcdir/$pkgname"
  PYTHON="python2" ./autogen.sh --system
  make
}

package() {
  cd "$srcdir/$pkgname"
  python2 setup.py install --root="$pkgdir/"

  install -d "$pkgdir/usr/bin"
  install -m 0755 pethtool.py "$pkgdir/usr/bin/pethtool"
  sed -i '1s/python/python2/' "$pkgdir/usr/bin/pethtool"
  install -m 0755 pifconfig.py "$pkgdir/usr/bin/pifconfig"
  sed -i '1s/python/python2/' "$pkgdir/usr/bin/pifconfig"

  install -d "$pkgdir/usr/share/man/man8"
  install -m 644 man/pethtool.8.gz "$pkgdir/usr/share/man/man8/"
  install -m 644 man/pifconfig.8.gz "$pkgdir/usr/share/man/man8/"
}
